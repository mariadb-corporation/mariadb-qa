#!/bin/bash
set +H
INPUT="${1}"
echo "--- Searching for '${INPUT}' in known bugs strings file..."
~/kbs "${INPUT}"
echo "--- Searching for '${INPUT}' in various places... This may take a while!"
echo "1/12..."
grep --binary-files=text -Fi "${INPUT}" /test/*/*/log/master.err /test/*/*/*/log/master.err 2>/dev/null
echo "2/12..."
grep --binary-files=text -Fi "${INPUT}" /data/*/*/log/master.err /data/*/*/*/log/master.err 2>/dev/null
echo "3/12..."
grep --binary-files=text -Fi "${INPUT}" /test/*/*/MYBUG* /test/*/*/*/MYBUG* 2>/dev/null
echo "4/12..."
grep --binary-files=text -Fi "${INPUT}" /data/*/*/MYBUG* /data/*/*/*/MYBUG* 2>/dev/null
echo "5/12..."
grep --binary-files=text -Fi "${INPUT}" /test/*/log/master.err 2>/dev/null
echo "6/12..."
grep --binary-files=text -Fi "${INPUT}" /data/*/log/master.err 2>/dev/null
echo "7/12..."
grep --binary-files=text -Fi "${INPUT}" /test/TESTCASES/*.report 2>/dev/null
echo "8/12..."
grep --binary-files=text -Fi "${INPUT}" /data/TESTCASES/*.report 2>/dev/null
echo "9/12..."
grep --binary-files=text -Fi "${INPUT}" /test/TESTCASES/*/*.report 2>/dev/null
echo "10/12..."
grep --binary-files=text -Fi "${INPUT}" /data/TESTCASES/*/*.report 2>/dev/null
echo "11/12..."
grep --binary-files=text -Fi "${INPUT}" /data/NEWBUGS/*.string 2>/dev/null
echo "12/12..."
grep --binary-files=text -Fi "${INPUT}" /data/FIREWORKS/*.string 2>/dev/null
echo "Done!"
