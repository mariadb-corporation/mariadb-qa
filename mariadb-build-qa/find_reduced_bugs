#!/bin/bash
set +H
if [ -z "${1}" ]; then echo 'Assert: please pass the string you want to search for as the first option to this script!'; exit 1; fi
if [ -d /data -a -r /data/find_reduced_bugs ]; then
  echo "Changing directory to /data"
  cd /data
fi
grep --binary-files=text -Fi "${1}" [0-9]*/*/MYBUG* 2>/dev/null | sed 's|^|wc -l |;s|MYBUG.*|\*_out|' | xargs -I {} bash -c "{}"
